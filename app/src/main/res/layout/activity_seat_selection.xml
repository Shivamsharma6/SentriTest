<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/seatRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- TOP: sticky header row -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Fixed corner cell -->
        <TextView
            android:id="@+id/tvCorner"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Seat\nTime"
            android:textSize="12sp"
            android:background="@drawable/cell_border" />

        <!-- Time header that scrolls HORIZONTALLY (synced to content) -->
        <com.sentri.access_control.ui.ObservableHorizontalScrollView
            android:id="@+id/hsvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="horizontal">

            <LinearLayout
                android:id="@+id/headerRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </com.sentri.access_control.ui.ObservableHorizontalScrollView>
    </LinearLayout>

    <!-- MIDDLE: grid area (fills remaining height) -->
    <LinearLayout
        android:id="@+id/gridArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Sticky left seat column; scrolls VERTICALLY (synced to content) -->
        <com.sentri.access_control.ui.ObservableScrollView
            android:id="@+id/svLeft"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/leftSeatColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </com.sentri.access_control.ui.ObservableScrollView>

        <!-- Content grid: horizontal + vertical scrolling -->
        <com.sentri.access_control.ui.ObservableHorizontalScrollView
            android:id="@+id/hsvContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="horizontal">

            <com.sentri.access_control.ui.ObservableScrollView
                android:id="@+id/svContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <!-- Only the hour cells live here (NO header, NO seat label) -->
                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.sentri.access_control.ui.ObservableScrollView>
        </com.sentri.access_control.ui.ObservableHorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvUnallocatedHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:text="Unallocated Seats"
        android:textStyle="bold"
        android:textSize="14sp" />

    <HorizontalScrollView
        android:id="@+id/hsvUnallocated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:scrollbars="horizontal">

        <TableLayout
            android:id="@+id/tableUnallocatedShifts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </HorizontalScrollView>

    <!-- CONTROLS BAR: zoom buttons horizontally + switch + seat display (TextView) -->
    <LinearLayout
        android:id="@+id/controlsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnZoomOut"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="−" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnZoomIn"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="+" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switchUnallocatedSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unallocated seat" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <!-- Seat display: shows "unallocated" when switch ON; otherwise "Seat: —" or selected row -->
        <TextView
            android:id="@+id/tvSeatDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat: —"
            android:padding="8dp"
            android:background="@drawable/cell_border"
            android:gravity="center_vertical"
            android:textSize="14sp"/>
    </LinearLayout>


    <!-- BOTTOM: fixed Start/End + Submit -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <EditText
            android:id="@+id/etStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/cell_border"
            android:contextClickable="false"
            android:enabled="false"
            android:gravity="center"
            android:hint="Start Time" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:hint="End Time"
            android:gravity="center"
            android:background="@drawable/cell_border" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />
    </LinearLayout>
</LinearLayout>
