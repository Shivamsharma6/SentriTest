<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorSurface">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Bar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/arrow_back"
                app:title="User Profile"
                app:titleTextColor="?attr/colorOnSurface" />

            <!-- Profile & Aadhar side-by-side -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <!-- Profile block -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivProfilePhoto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_profile_placeholder"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_circle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Profile Photo"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Aadhar block -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivAadharPhoto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_avatar_placeholder"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_circle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Aadhar Photo"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Email (read-only) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Email"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <!-- Contact -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contact"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/very_light_gray"
                android:textSize="16sp"
                android:background="@drawable/bg_search"
                android:padding="12dp"
                android:inputType="phone"
                android:enabled="false" />

            <!-- Current Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Current Card"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/etCurrentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/very_light_gray"
                android:textSize="16sp"
                android:background="@drawable/bg_search"
                android:padding="12dp"
                android:enabled="false" />

            <!-- Access Level -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Access Level"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />
            <Spinner
                android:id="@+id/spinnerAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_search"
                android:textColor="@color/very_light_gray"
                android:padding="8dp"
                android:enabled="false" />

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Status"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />
            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_search"
                android:textColor="@color/very_light_gray"
                android:padding="8dp"
                android:enabled="false" />

            <!-- Granted At -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Granted At"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvGrantedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <!-- Created At -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Created At"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <!-- Updated At -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Updated At"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvUpdatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <!-- Spacer so bottom button doesnâ€™t overlap -->
            <View
                android:layout_width="match_parent"
                android:layout_height="72dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Edit/Save Button -->
    <Button
        android:id="@+id/btnEditSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:text="Edit"
        android:background="@drawable/bg_rounded_button"
        android:visibility="gone" />

</FrameLayout>
