<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header with back -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_back"
                android:tint="?attr/colorOnSurface"/>
            <TextView
                android:id="@+id/tv_business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="[Business]"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <!-- Profile Photo + Label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Photo"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Aadhar Photo + Label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="32dp">

                <ImageView
                    android:id="@+id/ivAadharPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aadhar Photo"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>



        <!-- Name + Edit button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEditCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 1) Status  + Toggle-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inactive"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- ID -->
        <TextView
            android:id="@+id/tvCustomerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID â€“ 123"
            android:textColor="?attr/colorOnSurface"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <!-- place in your customer profile layout XML -->
        <TextView
            android:id="@+id/tvCardNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="No Card Assigned"
            android:textColor="?attr/colorOnSurface"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnAssignCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assign Card"
            android:visibility="gone" />


        <!-- Actions: WhatsApp, Notifications, Call -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <!-- WhatsApp -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:id="@+id/ivMessage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_whatsapp"
                    android:tint="?attr/colorOnSurface"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message\nCustomer"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Notifications -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:id="@+id/ivNotification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="?attr/colorOnSurface"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Call -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_call"
                    android:tint="?attr/colorOnSurface"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call\nCustomer"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Details card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Contact -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž Contact Number"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#448AFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Emergency -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž Emergency Contact"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvEmergencyContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#448AFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- 4) Payment rate -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¹ Payment Rate"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvPaymentLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¹0.00"
                android:textColor="#00E676"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/btnReceivePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receive Payment"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <!-- 5) Shifts -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Shifts"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvShiftDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading shifts..."
                android:textColor="#448AFF"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layoutShiftList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnAddShiftAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Shift"/>

                <Button
                    android:id="@+id/btnApplyLeave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Apply Leave"/>
            </LinearLayout>

                <Button
                    android:id="@+id/btnHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
