<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- AppBar / Toolbar (kept from original structure, color from new design) -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title=""
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <!-- Preserve the original spinner ID for minimal java changes -->
                <Spinner
                    android:id="@+id/spnBusinessSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:spinnerMode="dropdown"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- New dashboard body transplanted into NestedScrollView to keep appbar behavior -->
        <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface">

            <!-- Use same padding and structure as new dashboard -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <!-- Subtitle (keep id for existing code) -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:text="Below is a summary of your business activity."
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"/>

                <!-- Small action button kept with original id "button" -->
<!--                <Button-->
<!--                    android:id="@+id/button"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Button" />-->

                <!-- Row: summary cards (keeps tvCustomersValue and tvContractsValue IDs) -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!-- Customers card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:padding="6dp"
                                        android:src="@drawable/ic_group"
                                        android:tint="?attr/colorOnSurface"
                                        android:background="@drawable/circle_blue_background"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="New Customers"
                                        android:textColor="?attr/colorOnSurface"
                                        android:textSize="12sp"/>
                                </LinearLayout>

                                <!-- IMPORTANT: id preserved for java -->
                                <TextView
                                    android:id="@+id/tvCustomersValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="24"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textSize="28sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Contracts card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:padding="6dp"
                                        android:src="@drawable/ic_description"
                                        android:tint="?attr/colorOnSurface"
                                        android:background="@drawable/circle_blue_background"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="Total Customers"
                                        android:textColor="?attr/colorOnSurface"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <!-- IMPORTANT: id preserved for java -->
                                <TextView
                                    android:id="@+id/tvContractsValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="3,200"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textSize="28sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- You can append more cards here if needed -->
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Revenue / chart card (keeps spinner_duration id) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_revenue"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginBottom="14dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/label_revenue_title"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Revenue"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/revenue_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="↑ 2%"
                                android:textSize="12sp"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="12dp" />

                            <!-- duration spinner — keep id to match new layout -->
                            <Spinner
                                android:id="@+id/spinner_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minHeight="48dp"
                                android:spinnerMode="dropdown"
                                android:padding="6dp" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/chart_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="12dp"
                            android:contentDescription="revenue chart" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_low_cards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cards"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvLowCardsAlert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Low Remaining Cards: 0"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Row 2 -->
                <LinearLayout
                    android:id="@+id/row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <!-- Active Subscriptions -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_active_subscriptions"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="?attr/colorSurface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/label_active_subscriptions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Subscriptions"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/value_active_subscriptions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Pending Payments (till date) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_pending_payments"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="?attr/colorSurface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/label_pending_payments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending Payments (Till date)"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/value_pending_payments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Expected Payment -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_expected_payment"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/label_expected_title"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Expected Payment (This Month)"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/value_expected_overall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/expected_subtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₹ 0 received of ₹ 0 expected"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp" />

                        <!-- Progress bars preserved with expected ids -->
                        <ProgressBar
                            android:id="@+id/pbContract"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="12dp"
                            android:progress="60"
                            android:progressTint="@color/blue"
                            android:progressBackgroundTint="@color/very_light_gray"/>

                        <ProgressBar
                            android:id="@+id/pbDevice"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="8dp"
                            android:progress="40"
                            android:progressTint="@color/blue"
                            android:progressBackgroundTint="@color/very_light_gray"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_device_mini_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Devices"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/layoutMiniDeviceList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Spacer at bottom -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="28dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer (unchanged) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_home"
        app:menu="@menu/drawer_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>

