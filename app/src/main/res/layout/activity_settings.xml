<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <!-- Top bar: back, title, avatar -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Business Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBaseline_toBaselineOf="@id/backButton"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toStartOf="@id/ivAvatar"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_user"
        android:scaleType="centerCrop"
        android:contentDescription="Avatar"
        android:layout_marginEnd="0dp"
        android:background="@drawable/bg_circle"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Access level line -->
    <LinearLayout
        android:id="@+id/llAccessLevel"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvAccessLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access Level: "
            android:textColor="@color/blue"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvAccessValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[AccessValue]"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Section: Account Information -->
    <TextView
        android:id="@+id/tvAccountHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="Account Information"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurface"
        android:background="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/llAccessLevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Account info options -->
    <LinearLayout
        android:id="@+id/llOptions"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAccountHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Details -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowDetails"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurface"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/ivDetailsArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Users -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowUsers"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurface"
            android:layout_marginTop="1dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/ivUsersArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Available Devices -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowDevices"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurface"
            android:layout_marginTop="1dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvDevices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Devices"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/ivDevicesArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- Section: Support -->
    <TextView
        android:id="@+id/tvSupportHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:text="Support"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurface"
        android:background="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/llOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Support options -->
    <LinearLayout
        android:id="@+id/llSupportOptions"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSupportHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FAQ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowFaq"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurface"
            android:clickable="true"
            android:layout_marginTop="1dp"
            android:focusable="true">

            <TextView
                android:id="@+id/tvFaq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/ivFaqArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Contact Support -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowContact"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurface"
            android:clickable="true"
            android:layout_marginTop="1dp"
            android:focusable="true">

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Support"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/ivContactArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Payment -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowPaymentLink"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurface"
            android:clickable="true"
            android:layout_marginTop="1dp"
            android:focusable="true">

            <TextView
                android:id="@+id/tvPaymentLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/ivPaymentArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- Theme toggle -->
    <LinearLayout
        android:id="@+id/llThemeToggle"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="?attr/colorSurface"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/llSupportOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <Button
            android:id="@+id/btnLight"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_light_mode"
            android:drawablePadding="8dp"
            android:text="Light"
            android:textColor="?attr/colorOnSurface"
            android:textAllCaps="false"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"/>

        <Button
            android:id="@+id/btnDark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_dark_mode"
            android:drawablePadding="8dp"
            android:text="Dark"
            android:textColor="?attr/colorOnSurface"
            android:textAllCaps="false"/>

    </LinearLayout>

    <!-- Logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_outline_button"
        android:text="Log Out"
        android:textColor="?attr/colorOnSurface"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/llThemeToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
