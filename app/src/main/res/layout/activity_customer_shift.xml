<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <!-- Back arrow -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Customer ID title -->
    <TextView
        android:id="@+id/tvCustomerId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Shift"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBaseline_toBaselineOf="@id/backButton"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Time Slot label -->
    <TextView
        android:id="@+id/tvTimeSlotLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Slot"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Start Time value -->
    <TextView
        android:id="@+id/tvStartTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimeSlotLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- End Time value -->
    <TextView
        android:id="@+id/tvEndTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimeSlotLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subscription Date label -->
    <TextView
        android:id="@+id/tvSubscriptionDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscription Date"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEndTimeValue"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Start Date value -->
    <TextView
        android:id="@+id/tvStartDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubscriptionDateLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Start Date button -->
    <Button
        android:id="@+id/btnStartDate"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_event"
        android:drawableTint="?attr/colorOnSurface"
        android:drawablePadding="8dp"
        android:text="Start Date"
        android:textColor="?attr/colorOnSurface"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/tvStartDateValue"
        app:layout_constraintStart_toStartOf="@id/tvStartDateValue"
        android:layout_marginTop="4dp"/>

    <!-- End Date value -->
    <TextView
        android:id="@+id/tvEndDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubscriptionDateLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- End Date button -->
    <Button
        android:id="@+id/btnEndDate"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_event"
        android:drawableTint="?attr/colorOnSurface"
        android:drawablePadding="8dp"
        android:text="End Date"
        android:textColor="?attr/colorOnSurface"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/tvEndDateValue"
        app:layout_constraintEnd_toEndOf="@id/tvEndDateValue"
        android:layout_marginTop="4dp"/>

    <!-- Seat button -->
    <Button
        android:id="@+id/enterSeat"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter seat"
        android:textColor="?attr/colorOnSurface"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnEndDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:id="@+id/layoutSeatAndDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/enterSeat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvSeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_round_edittext"
            android:inputType="none"
            android:padding="12dp"
            android:text="Seat needs to be selected"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvShiftDayCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_round_edittext"
            android:padding="12dp"
            android:text="Total shift days:"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Comments input -->
    <EditText
        android:id="@+id/etComments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Comments*"
        android:textColorHint="@android:color/white"
        android:inputType="text"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="@drawable/bg_round_edittext"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/layoutSeatAndDays"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Submit button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etComments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Shift History header -->
    <TextView
        android:id="@+id/tvHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shift History"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- History list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerShiftHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvHistoryTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
