<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back arrow + Title -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Business Name"
        android:textSize="20sp"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Date selectors -->
    <TextView
        android:id="@+id/tvStartDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[yMMMd]"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnStartDate"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:drawableLeft="@drawable/ic_event"
        android:background="?attr/colorSurface"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvStartDateValue"
        app:layout_constraintStart_toStartOf="@id/tvStartDateValue"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvEndDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[yMMMd]"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnEndDate"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:drawableLeft="@drawable/ic_event"
        android:background="?attr/colorSurface"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEndDateValue"
        app:layout_constraintEnd_toEndOf="@id/tvEndDateValue"
        android:layout_marginTop="4dp"/>

    <!-- Total Amount row -->
    <TextView
        android:id="@+id/tvTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnStartDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tvTotalAmountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹87,500"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTotalLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Payment History header -->
    <TextView
        android:id="@+id/tvHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment History"
        android:textColor="?attr/colorOnSurface"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTotalLabel"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- History list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPaymentHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvHistoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
